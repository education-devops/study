#Ядра
worker_processes	auto;

nproc
lscpu
#------------------------------------------------
#Одновременные запросы(events)
worker_connections	1024;

ulimit -n
#------------------------------------------------
#Одновременно принимать новые подключения(events)
multi_accept	on;
#------------------------------------------------
#Кэширование файлов
open_file_cache			max=1000 inactive=20s;
open_file_cache_valid		30s;
openfile_cache_min_uses		2;
open_file_cache_errors		on;
#------------------------------------------------
#Размер буфера
client_body_buffer_size		16k;
client_header_buffer_size	1k;
client_max_body_size		8m;
large_client_header_buffers  2	1k;	
#------------------------------------------------
#Таймаут
client_body_timeout
client_header_timeout
#------------------------------------------------
#keepalive timeout. Высчитывается в милисекундах.
#Время через которое последует закрытие соединения, если не последует новый запрос. 
#Максимальное число значений можно посчитать (worker connections * worker processes). 
keepalive_timeout	300;
#------------------------------------------------
#Максимальное количество времени, через которое соединение будет закрыто.
#Подключение будет прервано и отобразится ошибка таймаута.
send_timeout	10;
#------------------------------------------------
#mime.types
#------------------------------------------------
#Добавление кастомного заголовка

#Будут работать, если с того же самого домена.
add_header	X-Frame-Options SAMEORIGIN;
